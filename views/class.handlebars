<main class="content" id="classpage-material">

	<button type="button" class="back-button">Back</button>

	<div class="class-title">
		<h2>{{name}}</h2>
	</div>
	
	<div class="the-buttons">
		<button type="button" class="flashcard-mode">Flashcard Mode</button>
		<button type="button" class="quiz-mode">Quiz Mode</button>
	</div>

	<section class="flashcard-definitions">

		{{#each classData}}
			{{>definitions}}
		{{/each}}

	</section>

	<div id="quiz-modal">
		<button type="button" id="quiz-button">QUIZ</button>
		
		<section id="quiz" hidden>
		<div id="modal-backdrop" class="hidden"></div>
			<div id="quiz-content">
				<div class="modal-header">
					<h3>QUIZ MODE</h3>
					<div id='close-button'><i class="fas fa-window-close"></i></div>
				</div>
				<div class="question-answer-container">
					{{!#each flashcards}}
						{{>questionAnswer}}
					{{!/each}}
				</div>
				<div id='prev-button'><i class="fas fa-caret-left"></i></div>
				<div id='next-button'><i class="fas fa-caret-right"></i></div>
			</div>
		</section>
	</div>

</main>
